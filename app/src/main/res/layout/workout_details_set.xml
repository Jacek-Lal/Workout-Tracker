<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="set"
            type="com.example.inz.models.SetRecord" />
    </data>

    <LinearLayout
        android:id="@+id/setLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/setNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{Integer.toString(set.number)}'
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/setVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.format("%1$.2f kg x %2$d", set.weight, set.reps)}'
            android:layout_marginStart="16dp"
            android:textColor="@color/white" />
    </LinearLayout>
</layout>
